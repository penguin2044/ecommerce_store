<div class="container">
  <h1>Checkout</h1>
  
  <div class="checkout-container">
    <!-- Order Summary -->
    <div class="checkout-summary">
      <h2>Order Summary</h2>
      
      <div class="checkout-items">
        <% @cart_items.each do |item| %>
          <div class="checkout-item">
            <div class="item-info">
              <strong><%= item[:product].name %></strong>
              <p class="item-detail">Quantity: <%= item[:quantity] %></p>
              <p class="item-detail">$<%= number_with_precision(item[:price], precision: 2) %> each</p>
            </div>
            <div class="item-total">
              $<%= number_with_precision(item[:subtotal], precision: 2) %>
            </div>
          </div>
        <% end %>
      </div>
      
      <div class="checkout-totals">
        <div class="total-line">
          <span>Subtotal:</span>
          <span>$<%= number_with_precision(@subtotal, precision: 2) %></span>
        </div>
        <div class="total-line grand-total">
          <span>Total:</span>
          <span>$<%= number_with_precision(@subtotal, precision: 2) %></span>
        </div>
      </div>
    </div>
    
    <!-- Shipping Info -->
    <div class="checkout-form">
      <h2>Shipping Information</h2>
      
        <%= form_with model: @address, url: '/checkout/create', method: :post do |f| %>        <div class="form-group">
          <%= f.label :street_address %>
          <%= f.text_field :street_address, value: @address.street_address, class: 'form-input' %>
        </div>
        
        <div class="form-row">
          <div class="form-group">
            <%= f.label :city %>
            <%= f.text_field :city, value: @address.city, class: 'form-input' %>
          </div>
          
          <div class="form-group">
            <%= f.label :province %>
            <%= f.text_field :province, value: @address.province&.name, class: 'form-input' %>
          </div>
        </div>
        
        <div class="form-group">
          <%= f.label :postal_code %>
          <%= f.text_field :postal_code, value: @address.postal_code, class: 'form-input' %>
        </div>
        
        <p class="shipping-note">
          Note: Address information is from your profile. Contact us if you need to ship to a different address.
        </p>
        
        <%= f.submit "Proceed to Payment", class: 'btn btn-checkout' %>
      <% end %>
    </div>
  </div>
</div>