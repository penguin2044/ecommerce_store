<!DOCTYPE html>
<html>
  <head>
    <title>Into the Music</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body>
    <nav class="main-nav">
      <div class="container nav-container">
        <div class="nav-left">
          <%= link_to 'Into the Music', root_path, class: 'logo' %>
          <%= link_to 'About', about_path, class: 'nav-link' %>
          <%= link_to 'Contact', contact_path, class: 'nav-link' %>
        </div>
        <div class="nav-right">
          <% if user_signed_in? %>
            <span class="nav-link">Hello, <%= current_user.first_name %>!</span>
            <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'nav-link' %>
          <% else %>
            <%= link_to 'Login', new_user_session_path, class: 'nav-link' %>
            <%= link_to 'Sign Up', new_user_registration_path, class: 'nav-link' %>
          <% end %>
          <%= link_to "ðŸ›’ Cart (#{session[:cart]&.values&.sum || 0})", cart_path, class: 'cart-link' %>
        </div>
      </div>
    </nav>
    
    <% if flash[:notice] %>
      <div class="container">
        <div class="flash notice"><%= flash[:notice] %></div>
      </div>
    <% end %>
    
    <% if flash[:alert] %>
      <div class="container">
        <div class="flash alert"><%= flash[:alert] %></div>
      </div>
    <% end %>
    
    <div class="devise-wrapper">
      <%= yield %>
    </div>
  </body>
</html>