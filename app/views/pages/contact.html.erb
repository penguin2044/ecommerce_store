<% breadcrumb :contact %>
<div class="container">
  <div class="page-content">
    <% page = Page.find_by(slug: 'contact') %>
    <% if page %>
      <h1><%= page.title %></h1>
      <div class="page-text">
        <%= simple_format(page.content) %>
      </div>
    <% else %>
      <h1>Contact Us</h1>
      <p>Content not found.</p>
    <% end %>
    
    <%= link_to 'Back to Store', root_path, class: 'btn' %>
  </div>
</div>